{
    "name": "api/course_catalog",
    "description": "API Course Catalog",
    "require": {
        "php": "^8.3",
        "ext-pdo": "*",
        "vlucas/phpdotenv": "^5.4",
        "altorouter/altorouter": "^2.0",
        "php-di/php-di": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r 'file_exists(\"vendor/autoload.php\") || copy(\"vendor/autoload.php\", \"vendor/autoload.php\");'"
        ]
    }
}
